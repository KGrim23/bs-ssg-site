	<header>
		<nav>	
			<a href="/">
				<img src="/images/avator.png" alt="avator logo" width="70" style="align-items:center; justify-content:center; border-radius:50%; border: none;">
			</a>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/blog">Blogs</a></li>
				<li><a href="/contact">Contact</a></li>
			</ul>
		</nav>
	</header>

