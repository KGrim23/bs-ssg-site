<!doctype html>
<html lang="{{ metadata.language }}">
<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<meta name="description" content="{{ description or metadata.description }}">

		<style>
			body{
				margin: 10px 50px;
				border-sizing: border-box;
				min-height: 100vh;
				display-flex;
				flex-direction: column;
			}

			main{
				margin-top: 70px;
				line-height: 2;
				min-height: 100vh;
			}

			header{
				margin-top: 30px;
			}

			nav{
				display: flex;
				flex-direction: row;
				width: 100%;
				gap: 20px;
				justify-content: space-between;
				align-items: center;
			}

			footer{
				margin-top: auto;
				text-align: center;
			}

			ul{
				list-style-type:none; display:inline-flex; flex-direction:row; gap:20px;
			}
		</style>
	
</head>
